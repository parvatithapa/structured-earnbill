        </textElement>
        <text><![CDATA[Product Id]]></text>
      </staticText>
      <staticText>
        <reportElement x="80" y="0" width="220" height="20"/>
        <textElement verticalAlignment="Middle" textAlignment="Left">
          <font size="10" isBold="true"/>
        </textElement>
        <text><![CDATA[Product Code]]></text>
      </staticText>
      <staticText>
        <reportElement x="300" y="0" width="220" height="20"/>
        <textElement verticalAlignment="Middle" textAlignment="Left">
          <font size="10" isBold="true"/>
        </textElement>
        <text><![CDATA[Product Description]]></text>
      </staticText>
      <staticText>
        <reportElement x="520" y="0" width="110" height="20"/>
        <textElement verticalAlignment="Middle" textAlignment="Right">
          <font size="10" isBold="true"/>
        </textElement>
        <text><![CDATA[No. of Avail. Assets]]></text>
      </staticText>
      <line>
        <reportElement x="0" y="20" width="630" height="1"/>
        <graphicElement>
          <pen lineWidth="2.0"/>
        </graphicElement>
      </line>
    </band>
  </columnHeader>
  <detail>
    <band height="20" >
      <textField>
        <reportElement x="0" y="0" width="80" height="20">
        </reportElement>
        <textElement verticalAlignment="Middle" textAlignment="Left">
          <font size="10"/>
        </textElement>
        <textFieldExpression><![CDATA[$F{product_id}]]></textFieldExpression>
      </textField>
      <textField>
        <reportElement x="80" y="0" width="220" height="20">
        </reportElement>
        <textElement verticalAlignment="Middle" textAlignment="Left">
          <font size="10"/>
        </textElement>
        <textFieldExpression><![CDATA[$F{product_code}]]></textFieldExpression>
      </textField>
      <textField>
        <reportElement x="300" y="0" width="220" height="20">
        </reportElement>
        <textElement verticalAlignment="Middle" textAlignment="Left">
          <font size="10"/>
        </textElement>
        <textFieldExpression><![CDATA[$F{product_description}]]></textFieldExpression>
      </textField>
      <textField>
        <reportElement x="520" y="0" width="110" height="20">
        </reportElement>
        <textElement verticalAlignment="Middle" textAlignment="Right">
          <font size="10"/>
        </textElement>
        <textFieldExpression><![CDATA[$F{no_assets}]]></textFieldExpression>
      </textField>
    </band>
  </detail>
  <pageFooter>
    <band height="25">
      <textField>
