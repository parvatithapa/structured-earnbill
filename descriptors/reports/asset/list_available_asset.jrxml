<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="list_available_asset" language="groovy" pageWidth="660" pageHeight="810" whenNoDataType="AllSectionsNoDetail" columnWidth="594" leftMargin="9" rightMargin="9" topMargin="20" bottomMargin="20" orientation="Landscape">
  <property name="ireport.zoom" value="1.5"/>
  <property name="ireport.x" value="0"/>
  <property name="ireport.y" value="0"/>
  <parameter name="entity_id" class="java.lang.Integer"/>
  <parameter name="child_entities" class="java.util.List"/>
  <parameter name="threshold_asset" class="java.lang.Integer"/>

  <queryString>
    <![CDATA[
            SELECT i.id AS product_id,
                   i.internal_number as product_code,
                   (SELECT id.content
                      FROM international_description id
                     WHERE id.table_id = (SELECT id
                                            FROM jbilling_table
                                           WHERE name = 'item')
                       AND id.language_id = 1
                       AND id.psudo_column='description'
                       AND id.foreign_id=i.id) AS product_description,
                   count(*) AS no_assets
              FROM item i
        INNER JOIN asset a ON a.item_id=i.id
             WHERE (i.entity_id = $P{entity_id} OR $X{IN, i.entity_id, child_entities})
               AND i.deleted=0
               AND i.asset_management_enabled=1
               AND a.deleted = 0
               AND a.status_id IN (SELECT status.id FROM asset_status status WHERE status.is_available=1)
          GROUP BY i.id
            HAVING CASE WHEN $P{threshold_asset} IS NOT NULL
                   THEN count(i.id) <= $P{threshold_asset}
                   ELSE TRUE
                   END
          ORDER BY no_assets DESC, product_id ASC
        ]]>
  </queryString>

  <field name="product_id" class="java.lang.Integer"/>
  <field name="product_code" class="java.lang.String"/>
  <field name="product_description" class="java.lang.String"/>
  <field name="no_assets" class="java.lang.Integer"/>

  <title>
