          <font size="14" isBold="true"/>
        </textElement>
        <text><![CDATA[Available Assets]]></text>
      </staticText>
      <staticText>
        <reportElement x="400" y="1" width="120" height="20"/>
        <box rightPadding="5"/>
        <textElement textAlignment="Right" verticalAlignment="Middle">
          <font isBold="true"/>
        </textElement>
        <text><![CDATA[Report Date:]]></text>
      </staticText>
      <textField pattern="MMM dd, YYYY" isBlankWhenNull="true">
        <reportElement x="520" y="1" width="80" height="20"/>
        <textElement verticalAlignment="Middle"/>
        <textFieldExpression class="java.util.Date"><![CDATA[com.sapienter.jbilling.server.timezone.TimezoneHelper.companyCurrentDate($P{entity_id})]]></textFieldExpression>
      </textField>
      <staticText>
        <reportElement x="400" y="21" width="120" height="20"/>
        <box rightPadding="5"/>
        <textElement textAlignment="Right" verticalAlignment="Middle">
          <font isBold="true"/>
        </textElement>
        <text><![CDATA[Threshold:]]></text>
      </staticText>
      <textField isBlankWhenNull="true">
        <reportElement x="520" y="21" width="80" height="20"/>
        <textElement verticalAlignment="Middle"/>
        <textFieldExpression class="java.lang.String"><![CDATA[$P{threshold_asset}]]></textFieldExpression>
      </textField>
    </band>
  </title>
  <columnHeader>
    <band height="21">
      <staticText>
        <reportElement x="0" y="0" width="80" height="20"/>
