<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="agl_invoice_adjustments_sub_report" language="groovy" pageWidth="375" pageHeight="100" columnWidth="375" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0" uuid="812a8aa5-e8f8-491f-8cf0-54aa7f98fea4">
	<property name="ireport.zoom" value="1.0"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<parameter name="invoice_id" class="java.lang.Integer"/>
	<parameter name="currency_symbol" class="java.lang.String"/>
	<parameter name="user_id" class="java.lang.Integer"/>
	<parameter name="credit_products_category_id" class="java.lang.Integer"/>
	<parameter name="debit_products_category_id" class="java.lang.Integer"/>
	<queryString>
		<![CDATA[SELECT s.* FROM (
SELECT          TO_CHAR((
SELECT active_since
FROM purchase_order
WHERE id = il.order_id
),'dd Mon yy') AS invoice_date,
il.description,
il.tax_amount,
il.amount
FROM            invoice_line il
LEFT OUTER JOIN rollup_codes rc
ON              rc.item_type_description = il.description
WHERE           (
                             il.invoice_id = $P{invoice_id}
             OR              il.invoice_id IN
                             (
                                        SELECT     i.id
                                        FROM       invoice i
                                        INNER JOIN invoice_line il
                                        ON         il.invoice_id = i.id
                                        WHERE      i.deleted = 0
                                        AND        i.user_id =
                                                   (
                                                          SELECT user_id
                                                          FROM   invoice
                                                          WHERE  id = $P{invoice_id})
                                        AND        i.CREATE_DATETIME::DATE >
                                                   (
                                                          SELECT create_datetime - INTERVAL '1 month'
                                                          FROM   invoice
                                                          WHERE  id = $P{invoice_id})
                                        AND        i.CREATE_DATETIME::DATE <=
                                                   (
                                                          SELECT CREATE_DATETIME::DATE
                                                          FROM   invoice
                                                          WHERE  id = $P{invoice_id})
                                        AND        i.balance > 0
                                        AND        i.total > 0
                                        AND        il.item_id IN
                                                   (
                                                              SELECT     i.id
                                                              FROM       item i
                                                              INNER JOIN item_type_map itm
                                                              ON         itm.item_id = i.id
                                                              INNER JOIN item_type it
                                                              ON         it.id = itm.type_id
                                                              INNER JOIN order_line_type olt
                                                              ON         olt.id = it.order_line_type_id
                                                              INNER JOIN international_description int_des
                                                              ON         int_des.foreign_id = olt.id
                                                              INNER JOIN jbilling_table jt
                                                              ON         jt.id = int_des.table_id
                                                              WHERE      int_des.content = 'Adjustment'
                                                              AND        jt.name = 'order_line_type' ) ) )
AND             il.deleted = 0
AND             il.item_id IN
             (
                        SELECT     i.id
                        FROM       item i
                        INNER JOIN item_type_map itm
                        ON         itm.item_id = i.id
                        INNER JOIN item_type it
                        ON         it.id = itm.type_id
                        INNER JOIN order_line_type olt
                        ON         olt.id = it.order_line_type_id
                        INNER JOIN international_description int_des
                        ON         int_des.foreign_id = olt.id
                        INNER JOIN jbilling_table jt
                        ON         jt.id = int_des.table_id
                        WHERE      int_des.content = 'Adjustment'
                        AND        jt.name = 'order_line_type'
                        AND        it.id = $P{credit_products_category_id})

UNION ALL

SELECT
TO_CHAR((
SELECT active_since
FROM purchase_order
WHERE id = il.order_id
),'dd Mon yy') AS invoice_date,
il.description,
il.tax_amount,
il.amount
FROM       credit_note cn
INNER JOIN invoice i
ON         i.id = cn.creation_invoice_id
INNER JOIN invoice_line il
ON         il.invoice_id = i.id
WHERE      cn.creation_invoice_id IN
        (
               SELECT i.id
               FROM   invoice i
               WHERE  i.deleted = 0
               AND    i.user_id =
                      (
                             SELECT user_id
                             FROM   invoice
                             WHERE  id = $P{invoice_id})
               AND    i.CREATE_DATETIME::DATE >
                      (
                             SELECT create_datetime - INTERVAL '1 month'
                             FROM   invoice
                             WHERE  id = $P{invoice_id})
               AND    i.CREATE_DATETIME::DATE <=
                      (
                             SELECT CREATE_DATETIME::DATE
                             FROM   invoice
                             WHERE  id = $P{invoice_id})
	       AND    i.id != $P{invoice_id})
        -- Exclude carried lines
AND        il.type_id != 3
AND        il.item_id IN
(
        SELECT     i.id
        FROM       item i
        INNER JOIN item_type_map itm
        ON         itm.item_id = i.id
        INNER JOIN item_type it
        ON         it.id = itm.type_id
        INNER JOIN order_line_type olt
        ON         olt.id = it.order_line_type_id
        INNER JOIN international_description int_des
        ON         int_des.foreign_id = olt.id
        INNER JOIN jbilling_table jt
        ON         jt.id = int_des.table_id
        WHERE      int_des.content = 'Adjustment'
        AND        jt.name = 'order_line_type'
        AND        it.id = $P{credit_products_category_id} )

UNION ALL

SELECT TO_CHAR(cn.create_datetime,'dd Mon yy') AS invoice_date,
                cnl.description,
                0 AS tax_amount,
                (-1 * cnl.amount) AS amount
FROM credit_note_line cnl
INNER JOIN credit_note cn
ON cn.id = cnl.credit_note_id
WHERE cn.deleted = 0
AND cn.creation_invoice_id IS NULL
AND cn.credit_type = 'USER_GENERATED'
AND cn.subscription_order_id IS NULL
AND TRIM(cn.service_id) = ''
AND cn.user_id = $P{user_id}
AND CASE WHEN
	(
		SELECT inv_sum.last_invoice_id
		     FROM   invoice_summary inv_sum
		     WHERE  inv_sum.creation_invoice_id = $P{invoice_id}
	) IS NOT NULL
	THEN
	(
	SELECT cn.create_datetime >
	      (
		     SELECT i.create_timestamp
		     FROM   invoice i
		     INNER JOIN invoice_summary inv_sum
		     ON inv_sum.last_invoice_id = i.id
		     WHERE  inv_sum.creation_invoice_id = $P{invoice_id})
	)
	ELSE
	true
	END
AND cn.create_datetime <=
      (
             SELECT create_timestamp
             FROM   invoice
             WHERE  id = $P{invoice_id})

UNION ALL

SELECT          TO_CHAR((
SELECT active_since
FROM purchase_order
WHERE id = il.order_id
),'dd Mon yy') AS invoice_date,
il.description,
il.tax_amount,
il.amount
FROM            invoice_line il
LEFT OUTER JOIN rollup_codes rc
ON              rc.item_type_description = il.description
WHERE           (
                             il.invoice_id = $P{invoice_id}
             OR              il.invoice_id IN
                             (
                                        SELECT     i.id
                                        FROM       invoice i
                                        INNER JOIN invoice_line il
                                        ON         il.invoice_id = i.id
                                        WHERE      i.deleted = 0
                                        AND        i.user_id =
                                                   (
                                                          SELECT user_id
                                                          FROM   invoice
                                                          WHERE  id = $P{invoice_id})
                                        AND        i.CREATE_DATETIME::DATE >
                                                   (
                                                          SELECT create_datetime - INTERVAL '1 month'
                                                          FROM   invoice
                                                          WHERE  id = $P{invoice_id})
                                        AND        i.CREATE_DATETIME::DATE <=
                                                   (
                                                          SELECT CREATE_DATETIME::DATE
                                                          FROM   invoice
                                                          WHERE  id = $P{invoice_id})
                                        AND        i.balance >= 0
                                        AND        i.total >= 0
                                        AND        il.item_id IN
                                                   (
                                                              SELECT     i.id
                                                              FROM       item i
                                                              INNER JOIN item_type_map itm
                                                              ON         itm.item_id = i.id
                                                              INNER JOIN item_type it
                                                              ON         it.id = itm.type_id
                                                              INNER JOIN order_line_type olt
                                                              ON         olt.id = it.order_line_type_id
                                                              INNER JOIN international_description int_des
                                                              ON         int_des.foreign_id = olt.id
                                                              INNER JOIN jbilling_table jt
                                                              ON         jt.id = int_des.table_id
                                                              WHERE      int_des.content = 'Adjustment'
                                                              AND        jt.name = 'order_line_type'
                                                              AND        int_des.language_id = 1 ) ) )
AND             il.deleted = 0
AND             il.item_id IN
             (
                        SELECT     i.id
                        FROM       item i
                        INNER JOIN item_type_map itm
                        ON         itm.item_id = i.id
                        INNER JOIN item_type it
                        ON         it.id = itm.type_id
                        INNER JOIN order_line_type olt
                        ON         olt.id = it.order_line_type_id
                        INNER JOIN international_description int_des
                        ON         int_des.foreign_id = olt.id
                        INNER JOIN jbilling_table jt
                        ON         jt.id = int_des.table_id
                        WHERE      int_des.content = 'Adjustment'
                        AND        jt.name = 'order_line_type'
                        AND        int_des.language_id = 1
                        AND        it.id = $P{debit_products_category_id})

UNION ALL

SELECT
TO_CHAR((
SELECT active_since
FROM purchase_order
WHERE id = il.order_id
),'dd Mon yy') AS invoice_date,
il.description,
il.tax_amount,
il.amount
FROM       credit_note cn
INNER JOIN invoice i
ON         i.id = cn.creation_invoice_id
INNER JOIN invoice_line il
ON         il.invoice_id = i.id
WHERE      cn.creation_invoice_id IN
        (
               SELECT i.id
               FROM   invoice i
               WHERE  i.deleted = 0
               AND    i.user_id =
                      (
                             SELECT user_id
                             FROM   invoice
                             WHERE  id = $P{invoice_id})
               AND    i.CREATE_DATETIME::DATE >
                      (
                             SELECT create_datetime - INTERVAL '1 month'
                             FROM   invoice
                             WHERE  id = $P{invoice_id})
               AND    i.CREATE_DATETIME::DATE <=
                      (
                             SELECT CREATE_DATETIME::DATE
                             FROM   invoice
                             WHERE  id = $P{invoice_id})
	       AND    i.id != $P{invoice_id})
        -- Exclude carried lines
AND        il.type_id != 3
AND        il.item_id IN
(
        SELECT     i.id
        FROM       item i
        INNER JOIN item_type_map itm
        ON         itm.item_id = i.id
        INNER JOIN item_type it
        ON         it.id = itm.type_id
        INNER JOIN order_line_type olt
        ON         olt.id = it.order_line_type_id
        INNER JOIN international_description int_des
        ON         int_des.foreign_id = olt.id
        INNER JOIN jbilling_table jt
        ON         jt.id = int_des.table_id
        WHERE      int_des.content = 'Adjustment'
        AND        jt.name = 'order_line_type'
        AND        int_des.language_id = 1
        AND        it.id = $P{debit_products_category_id} )
) s
ORDER BY CASE WHEN s.amount < 0 THEN 'CR' ELSE 'DR' END, to_date(s.invoice_date,'dd Mon yy'), s.description ASC;]]>
	</queryString>
	<field name="invoice_date" class="java.lang.String"/>
	<field name="description" class="java.lang.String"/>
	<field name="tax_amount" class="java.math.BigDecimal"/>
	<field name="amount" class="java.math.BigDecimal"/>
	<variable name="gst_in_charges" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$F{tax_amount}]]></variableExpression>
	</variable>
	<variable name="total_adjustment" class="java.math.BigDecimal" calculation="Sum">
		<variableExpression><![CDATA[$F{amount}]]></variableExpression>
	</variable>
