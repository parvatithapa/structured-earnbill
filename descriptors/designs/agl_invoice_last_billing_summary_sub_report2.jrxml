<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="agl_invoice_last_billing_summary_sub_report2" language="groovy" pageWidth="101" pageHeight="20" columnWidth="101" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0" uuid="23de836e-1016-4409-972f-8855ce03a545">
	<property name="ireport.zoom" value="1.0"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<parameter name="currency_symbol" class="java.lang.String"/>
	<parameter name="invoice_id" class="java.lang.Integer"/>
	<parameter name="SUBREPORT_DIR" class="java.lang.String">
		<defaultValueExpression><![CDATA[$P{SUBREPORT_DIR}+"resources/designs/"]]></defaultValueExpression>
	</parameter>
	<parameter name="account_charges_product_category_id" class="java.lang.Integer"/>
	<parameter name="other_charges_and_credits_product_category_id" class="java.lang.Integer"/>
	<queryString>
		<![CDATA[-- Minurse the adhoc credit note amount
SELECT SUM(il.amount) -
	COALESCE((SELECT SUM(cnl.amount)
	FROM credit_note_line cnl
	INNER JOIN credit_note cn
	ON cn.id = cnl.credit_note_id
	INNER JOIN service_summary inner_ss
	ON inner_ss.credit_note_id = cn.id
	WHERE cn.deleted = 0
	AND cn.creation_invoice_id IS NULL
	AND cn.credit_type = 'USER_GENERATED'
	AND inner_ss.invoice_id = ss.invoice_id),0) AS amount
FROM invoice_line il
INNER JOIN service_summary ss ON ss.invoice_line_id = il.id
WHERE ss.invoice_id = $P{invoice_id}
AND il.item_id NOT IN
(
 SELECT i.id
 FROM item i
 INNER JOIN item_type_map itm ON itm.item_id = i.id
 INNER JOIN item_type it ON it.id = itm.type_id
 WHERE it.id = $P{account_charges_product_category_id}
)
AND il.item_id NOT IN
(
 SELECT i.id
 FROM item i
 INNER JOIN item_type_map itm ON itm.item_id = i.id
 INNER JOIN item_type it ON it.id = itm.type_id
 WHERE it.id = $P{other_charges_and_credits_product_category_id}
)
AND ss.plan_id IS NOT NULL
GROUP BY ss.invoice_id;]]>
	</queryString>
	<field name="amount" class="java.math.BigDecimal"/>
	<detail>
		<band height="17" splitType="Stretch">
			<textField isBlankWhenNull="true">
				<reportElement x="0" y="0" width="100" height="16" uuid="84506223-2e39-470c-afec-399ad5f881e9"/>
				<textElement textAlignment="Right" verticalAlignment="Middle">
					<font fontName="FoundrySterling-Book" isItalic="true"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{currency_symbol}+""+
(new java.text.DecimalFormat("#,##0.00").format($F{amount}.setScale(2, BigDecimal.ROUND_HALF_UP)))]]></textFieldExpression>
			</textField>
		</band>
	</detail>
</jasperReport>
